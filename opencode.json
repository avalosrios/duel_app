{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "default_agent": "build",
  "permission": {
    "edit": "allow",
    "read": "allow",
    "bash": "ask",
    "webfetch": "allow"
  },
  "compaction": {
    "auto": true,
    "prune": true,
    "reserved": 10000
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-6",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "plan": {
      "mode": "primary",
      "model": "github-copilot/claude-haiku-4.5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  }
}